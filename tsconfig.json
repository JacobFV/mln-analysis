{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["src/next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/_app.jsx", "src/pages/auth/login.jsx", "src/pages/index.jsx", "src/pages/_error.jsx"],
  "exclude": ["node_modules"]
}
