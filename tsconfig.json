{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2018",
      "esnext.asynciterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // `isolatedModules` needs to temporarily be set as false in order to
    // seed the database. It will automatically be set to true when you execute
    // `npm run dev` or a related command.
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // the following settings are needed for the `typegraphql` types
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/_app.jsx",
    // I'm not sure if these settings are necessary
    // and I don't know how they got here
    "src/pages/api/auth/login.jsx",
    "src/pages/index.jsx",
    "src/pages/_error.jsx",
    "src/components/appLogoImage.jsx",
    "src/components/error.jsx",
    "src/common/constants.js"
  ],
  "exclude": [
    "node_modules"
  ]
}